@model IEnumerable<WebLicoreria.Models.Categorium>

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Cambiar el color de los encabezados de la tabla */
    table.table th {
        color: black;
    }

    /* Cambiar el color de las celdas de la tabla (datos) */
    table.table td {
        color: black;
        padding: 5px;
    }

    /* Reducir el alto de las filas */
    table.table tr {
        line-height: 1.2; /* Ajustar el alto de las filas */
    }

</style>

<h1>Categorías</h1>

<p>
    <a asp-action="Create"><i class="fa fa-plus"></i> Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Usuario Registro</th>
            <th>Fecha Regístro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>

            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"><i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" title="Detalle"><i class="fa fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
